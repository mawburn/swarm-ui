{
  "name": "swarm-ui",
  "version": "1.0.0",
  "description": "SwarmUI - A ViCE (Vibe Coding Environment) for natural, conversational coding",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "electron": "electron electron/main.js",
    "build": "electron-builder",
    "dist": "pnpm run prepare-build && pnpm run build",
    "prepare-build": "bash scripts/bundle-ruby.sh && bash scripts/bundle-ttyd.sh",
    "lint": "eslint .",
    "format": "prettier --write '**/*.{js,jsx,json,yml,yaml,css,md}'"
  },
  "keywords": [
    "rails",
    "electron",
    "desktop",
    "ide",
    "vibe-coding"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2"
  }
}
