<% content_for :title, "Sessions" %>

<div class="py-8">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-base font-semibold leading-6 text-gray-900 flex items-center">
          <%= heroicon "command-line", variant: :outline, options: { class: "h-5 w-5 mr-2" } %>
          Sessions
        </h1>
        <p class="mt-2 text-sm text-gray-700">Manage your claude-swarm sessions and agents.</p>
      </div>
      <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <%= link_to new_session_path, class: "inline-flex items-center justify-center gap-x-1.5 rounded-md bg-orange-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-900" do %>
          <%= heroicon "plus", variant: :mini, options: { class: "h-5 w-5" } %>
          New Session
        <% end %>
      </div>
    </div>

    <!-- Tabs -->
    <div class="mt-8">
      <div class="border-b border-gray-200">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
          <%= link_to sessions_path, class: "#{@filter == 'all' ? 'border-orange-900 text-orange-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium" do %>
            All
            <span class="ml-2 rounded-full <%= @filter == 'all' ? 'bg-orange-100 text-orange-900' : 'bg-gray-100 text-gray-600' %> px-2.5 py-0.5 text-xs font-medium"><%= Session.count %></span>
          <% end %>
          <%= link_to sessions_path(filter: 'active'), class: "#{@filter == 'active' ? 'border-orange-900 text-orange-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium" do %>
            <%= heroicon "play", variant: :mini, options: { class: "h-4 w-4 inline mr-1" } %>
            Active
            <span class="ml-2 rounded-full <%= @filter == 'active' ? 'bg-orange-100 text-orange-900' : 'bg-gray-100 text-gray-600' %> px-2.5 py-0.5 text-xs font-medium"><%= Session.active.count %></span>
          <% end %>
          <%= link_to sessions_path(filter: 'history'), class: "#{@filter == 'history' ? 'border-orange-900 text-orange-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium" do %>
            <%= heroicon "clock", variant: :mini, options: { class: "h-4 w-4 inline mr-1" } %>
            History
            <span class="ml-2 rounded-full <%= @filter == 'history' ? 'bg-orange-100 text-orange-900' : 'bg-gray-100 text-gray-600' %> px-2.5 py-0.5 text-xs font-medium"><%= Session.where.not(status: 'active').count %></span>
          <% end %>
        </nav>
      </div>
    </div>

    <% if @sessions.any? %>
      <div class="mt-8 space-y-4">
        <% @sessions.each do |session| %>
          <div class="bg-white shadow rounded-lg p-6 border border-gray-200">
            <div class="flex items-center justify-between">
              <div class="flex items-start space-x-8 flex-1">
                <div class="min-w-0">
                  <div class="flex items-center space-x-3">
                    <h3 class="text-lg font-medium text-gray-900">
                      <%= session.swarm_name || "Session #{session.id}" %>
                    </h3>
                    <span class="inline-flex items-center rounded-md <%= session.status == 'active' ? 'bg-green-50 text-green-700 ring-green-600/20' : (session.status == 'completed' ? 'bg-blue-50 text-blue-700 ring-blue-600/20' : 'bg-red-50 text-red-700 ring-red-600/20') %> px-2 py-1 text-xs font-medium ring-1 ring-inset flex-shrink-0">
                      <%= heroicon session.status == 'active' ? 'play' : (session.status == 'completed' ? 'check-circle' : 'x-circle'), variant: :mini, options: { class: "h-3 w-3 mr-1" } %>
                      <%= session.status&.capitalize || 'Unknown' %>
                    </span>
                  </div>
                  <% if session.project_path.present? %>
                    <p class="text-xs text-gray-500 font-mono mt-1 truncate" title="<%= session.project_path %>">
                      <%= session.project_path %>
                    </p>
                  <% end %>
                </div>
                
                <div class="flex items-center space-x-6 text-sm text-gray-600">
                  <div>
                    <span class="font-medium">Project:</span> <%= session.project_folder_name || "N/A" %>
                  </div>
                  <div>
                    <span class="font-medium">Started:</span> <%= session.started_at&.strftime("%b %d, %I:%M %p") || "Not started" %>
                  </div>
                  <% if session.duration_seconds.present? %>
                    <div>
                      <span class="font-medium">Duration:</span> <%= distance_of_time_in_words(session.duration_seconds) %>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="flex items-center space-x-2 ml-4 flex-shrink-0">
                <%= link_to session_path(session), class: "inline-flex items-center justify-center rounded-md bg-white p-2 text-gray-400 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 hover:text-gray-500", title: "View" do %>
                  <%= heroicon "eye", variant: :mini, options: { class: "h-4 w-4" } %>
                <% end %>
                <% if session.status == 'active' %>
                  <%= link_to "#", data: { "turbo-method": "patch" }, class: "inline-flex items-center justify-center rounded-md bg-white p-2 text-orange-400 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-orange-50 hover:text-orange-500", title: "Stop" do %>
                    <%= heroicon "stop", variant: :mini, options: { class: "h-4 w-4" } %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="mt-8 text-center">
        <div class="mx-auto h-12 w-12 text-gray-400">
          <%= heroicon 'command-line', variant: :outline, options: { class: "h-12 w-12" } %>
        </div>
        <h3 class="mt-2 text-sm font-semibold text-gray-900">
          No <%= @filter == 'all' ? 'sessions' : (@filter == 'active' ? 'active sessions' : 'session history') %>
        </h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new claude-swarm session.</p>
        <div class="mt-6 space-x-3">
          <%= link_to new_session_path, class: "inline-flex items-center rounded-md bg-orange-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-900" do %>
            <%= heroicon "plus", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
            Create Session
          <% end %>
          <%= link_to "#", class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
            <%= heroicon "document-duplicate", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
            Browse Templates
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>