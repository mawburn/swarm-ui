<% content_for :title, "New Session" %>

<div class="py-8" data-controller="filesystem-browser">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Create Claude Swarm Session</h1>
      <p class="mt-1 text-sm text-gray-500">Create a new session to work with your claude-swarm agents.</p>
    </div>

    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
      <div class="px-4 py-6 sm:p-8">
        <%= simple_form_for @session, local: true, wrapper: :tailwind do |f| %>
          <div class="space-y-6">
            <%= f.input :swarm_name, 
                        label: "Session Name", 
                        placeholder: "My Claude Swarm Session",
                        hint: "A descriptive name for your session",
                        wrapper: :tailwind %>

            <div class="space-y-2">
              <%= f.input :project_path, 
                          label: "Project Path", 
                          placeholder: "/path/to/your/project",
                          hint: "The absolute path to your project directory",
                          wrapper: :tailwind,
                          input_html: { data: { filesystem_browser_target: "projectPathInput" } } %>
              <button type="button"
                      class="inline-flex items-center gap-2 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
                      data-action="click->filesystem-browser#open">
                <%= heroicon "folder-open", variant: :outline, options: { class: "h-5 w-5" } %>
                Browse
              </button>
              <span class="ml-3 text-sm text-gray-600" data-filesystem-browser-target="selectedPath"></span>
            </div>

            <div class="space-y-2">
              <label class="text-sm font-medium leading-6 text-gray-900">Configuration File</label>
              <select name="session[configuration_path]" 
                      class="block w-full rounded-md border-gray-300 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6"
                      data-filesystem-browser-target="configSelect">
                <option value="">Select project directory first</option>
              </select>
              <p class="mt-2 text-sm text-gray-500">Automatically detected swarm configuration files</p>
            </div>

            <%= f.input :use_worktree, 
                        as: :boolean,
                        label: "Use Git Worktree",
                        hint: "Create a separate git worktree for this session",
                        wrapper: :tailwind_boolean %>

            <div class="flex items-center justify-end gap-x-6">
              <%= link_to "Cancel", sessions_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
              <%= f.submit "Create Session", class: "rounded-md bg-orange-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Filesystem Browser Modal -->
    <div class="hidden fixed inset-0 z-50 overflow-y-auto" data-filesystem-browser-target="modal">
      <div class="flex min-h-full items-center justify-center p-4 text-center sm:items-center sm:p-0">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" data-action="click->filesystem-browser#close"></div>
        
        <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-2xl">
          <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
            <div class="mb-4">
              <h3 class="text-lg font-semibold leading-6 text-gray-900">Select Project Directory</h3>
              <div class="mt-2 flex items-center gap-2">
                <button type="button"
                        class="inline-flex items-center rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
                        data-action="click->filesystem-browser#goUp">
                  <%= heroicon "arrow-up", variant: :outline, options: { class: "h-4 w-4" } %>
                  Up
                </button>
                <div class="flex-1 truncate text-sm text-gray-600">
                  <span class="font-medium">Current:</span>
                  <span data-filesystem-browser-target="currentPath">/</span>
                </div>
              </div>
            </div>
            
            <div class="border rounded-md max-h-96 overflow-y-auto">
              <div data-filesystem-browser-target="fileList" class="divide-y divide-gray-200">
                <!-- Directory entries will be rendered here -->
              </div>
            </div>
          </div>
          
          <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
            <button type="button"
                    class="inline-flex w-full justify-center rounded-md bg-orange-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 sm:ml-3 sm:w-auto"
                    data-action="click->filesystem-browser#selectCurrentDirectory">
              Select This Directory
            </button>
            <button type="button"
                    class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto"
                    data-action="click->filesystem-browser#close">
              Cancel
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>